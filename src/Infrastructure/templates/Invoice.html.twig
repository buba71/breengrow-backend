<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            margin-top: 500px;
        }
        h3 {
            margin-bottom: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        td {
            padding-left: 1rem;
            padding-right: 1rem;
            text-align: center;
        }

        .sell-address {
            float: right;
            height: 20%;
        }
        .bill-address {
            margin-top: 200px;
            margin-bottom: 2rem;
        }

        .col-title {
            background-color: #adb5bd;
        }

        .inv-amount, .line-price {
            text-align: right;
        }

        .line-description {
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="wrapper">

        <section class="sell-address">
            <h3>Seller address</h3>
            <span class="sell-siret">Siret: {{ sellerAddress.hiveSiret }}</span><br/>
            <span class="sell-name">{{ sellerAddress.hiveName }}</span><br/>
            <span class="sell-street">{{ sellerAddress.streetAddress }}</span><br/>
            <span class="sell-city">{{ sellerAddress.zipCode }} {{ sellerAddress.cityAddress }}</span><br/>
        </section>

        <h1 class="document-title">Invoice {{ invoiceNumber }}</h1>

        <section class="bill-address">
            <h3>Billing address</h3>
            <span class="customer-name">{{ billingAddress.firstName }} {{ billingAddress.lastName }}</span><br/>
            <span class="bill-street">{{ billingAddress.street }}</span><br/>
            <span class="bill-city">{{ billingAddress.zipCode }} {{ billingAddress.city }}</span><br/>
        </section>

        <section class="invoice-details">

            <table class="">
                <thead>
                <tr>
                    <th class="inv-number">Number: {{ invoiceNumber }}</th>
                </tr>
                </thead>
                <tbody>
                <tr class="col-title">
                    <td>Description</td>
                    <td>Quantity</td>
                    <td>Price</td>
                </tr>
                {% for invoiceLine in invoiceLines %}
                <tr class="line-details">
                    <td class="line-description">{{ invoiceLine.productDescription }}</td>
                    <td class="line-quantity">{{ invoiceLine.quantity }}</td>
                    <td class="line-price">{{ invoiceLine.linePrice }} EUR</td>
                </tr>
                {% endfor %}

                <tr class="amount">
                    <td class="line-description"><strong>Total amount</strong></td>
                    <td></td>
                    <td class="inv-amount"><strong>{{ amount }} EUR</strong></td>
                </tr>
                </tbody>
            </table>

        </section>

    </div>
</body>


</html>

